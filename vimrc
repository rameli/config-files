set nocompatible
syntax enable
filetype plugin on

set path+=**
set wildmenu

set number
set expandtab
set tabstop=4
set shiftwidth=4
nnoremap <esc><esc> :noh<return>
set ignorecase
set smartcase
set hlsearch
set autoindent

let g:netrw_banner = 0
let g:netrw_liststyle = 3
let g:netrw_browse_split = 4
let g:netrw_altv = 1
let g:netrw_winsize = 25
